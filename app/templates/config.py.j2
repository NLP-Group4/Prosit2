"""
Application configuration loaded from environment variables.
"""
from pydantic_settings import BaseSettings


class Settings(BaseSettings):
    DATABASE_URL: str = "postgresql://postgres:postgres@db:5432/{{ project_name | replace('-', '_') }}"
    {% if auth.enabled %}
    SECRET_KEY: str
    ALGORITHM: str = "HS256"
    ACCESS_TOKEN_EXPIRE_MINUTES: int = {{ auth.access_token_expiry_minutes }}
    {% endif %}

    class Config:
        env_file = ".env"


settings = Settings()
