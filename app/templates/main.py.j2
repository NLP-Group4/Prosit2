"""
FastAPI application entrypoint for the generated backend.
"""
from contextlib import asynccontextmanager

from fastapi import FastAPI
from fastapi.middleware.cors import CORSMiddleware
from app.database import engine
from app.models import Base
{% if auth.enabled %}
from app.auth import router as auth_router
{% endif %}
{% for entity in entities %}
{% if entity.crud and not (auth.enabled and entity.name == 'User') %}
from app.routers.{{ entity.table_name }} import router as {{ entity.table_name }}_router
{% endif %}
{% endfor %}


@asynccontextmanager
async def lifespan(app):
    """Create database tables on startup."""
    Base.metadata.create_all(bind=engine)
    yield


app = FastAPI(
    title="{{ project_name }}",
    description="{{ description }}",
    version="1.0.0",
    lifespan=lifespan,
)

# CORS middleware
app.add_middleware(
    CORSMiddleware,
    allow_origins=["*"],
    allow_credentials=True,
    allow_methods=["*"],
    allow_headers=["*"],
)

{% if auth.enabled %}
app.include_router(auth_router, prefix="/auth", tags=["Authentication"])
{% endif %}
{% for entity in entities %}
{% if entity.crud and not (auth.enabled and entity.name == 'User') %}
app.include_router({{ entity.table_name }}_router, prefix="/{{ entity.table_name }}", tags=["{{ entity.name }}"])
{% endif %}
{% endfor %}

@app.get("/health", tags=["Health"])
def health_check():
    return {"status": "ok"}

