version: "3.9"

services:
  db:
    image: postgres:{{ database.version }}
    environment:
      POSTGRES_USER: postgres
      POSTGRES_PASSWORD: postgres
      POSTGRES_DB: {{ project_name | replace('-', '_') }}
    ports:
      - "5432:5432"
    volumes:
      - pgdata:/var/lib/postgresql/data
    healthcheck:
      test: ["CMD-SHELL", "pg_isready -U postgres"]
      interval: 2s
      timeout: 5s
      retries: 10

  app:
    build: .
    ports:
      - "8000:8000"
    environment:
      DATABASE_URL: postgresql://postgres:postgres@db:5432/{{ project_name | replace('-', '_') }}
      {% if auth.enabled %}
      SECRET_KEY: change-me-in-production
      {% endif %}
    depends_on:
      db:
        condition: service_healthy

volumes:
  pgdata:

