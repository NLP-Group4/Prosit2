{
    "project_name": "ecommerce-api",
    "description": "An e-commerce backend with products and orders",
    "spec_version": "1.0",
    "database": {
        "type": "postgres",
        "version": "15"
    },
    "auth": {
        "enabled": true,
        "type": "jwt",
        "access_token_expiry_minutes": 60
    },
    "entities": [
        {
            "name": "Product",
            "table_name": "products",
            "fields": [
                {
                    "name": "id",
                    "type": "uuid",
                    "primary_key": true,
                    "nullable": false,
                    "unique": true
                },
                {
                    "name": "name",
                    "type": "string",
                    "primary_key": false,
                    "nullable": false,
                    "unique": false
                },
                {
                    "name": "description",
                    "type": "text",
                    "primary_key": false,
                    "nullable": true,
                    "unique": false
                },
                {
                    "name": "price",
                    "type": "float",
                    "primary_key": false,
                    "nullable": false,
                    "unique": false
                },
                {
                    "name": "in_stock",
                    "type": "boolean",
                    "primary_key": false,
                    "nullable": false,
                    "unique": false
                }
            ],
            "crud": true
        },
        {
            "name": "Order",
            "table_name": "orders",
            "fields": [
                {
                    "name": "id",
                    "type": "uuid",
                    "primary_key": true,
                    "nullable": false,
                    "unique": true
                },
                {
                    "name": "customer_email",
                    "type": "string",
                    "primary_key": false,
                    "nullable": false,
                    "unique": false
                },
                {
                    "name": "total_amount",
                    "type": "float",
                    "primary_key": false,
                    "nullable": false,
                    "unique": false
                },
                {
                    "name": "placed_at",
                    "type": "datetime",
                    "primary_key": false,
                    "nullable": false,
                    "unique": false
                }
            ],
            "crud": true
        }
    ]
}